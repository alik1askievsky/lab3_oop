@model IEnumerable<Lab3.Models.ParticipantModule>

@{
    ViewData["Title"] = "Participant Modules";
}

<h1>Participant Modules</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Participant</th>
            <th>Module</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Participant?.Name @item.Participant?.Surname</td>
                <td>@item.Module?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
